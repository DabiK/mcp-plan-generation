{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://planflow.dev/schema/v1.0.0",
  "title": "PlanFlow Implementation Plan",
  "description": "Schema for structured implementation plans with dependencies",
  "type": "object",
  "required": ["schemaVersion", "planType", "metadata", "plan", "steps"],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "1.0.0",
      "description": "Version of the PlanFlow schema"
    },
    "planType": {
      "type": "string",
      "enum": ["feature", "refactor", "migration", "bugfix", "optimization", "documentation"],
      "description": "Type of implementation plan"
    },
    "metadata": {
      "type": "object",
      "required": ["title", "description"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "author": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "plan": {
      "type": "object",
      "required": ["objective", "scope"],
      "properties": {
        "objective": {
          "type": "string",
          "minLength": 1,
          "description": "Main objective of the plan"
        },
        "scope": {
          "type": "string",
          "minLength": 1,
          "description": "Scope of the implementation"
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Technical or business constraints"
        },
        "assumptions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Assumptions made in the plan"
        },
        "successCriteria": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Criteria to consider the plan successful"
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/Step"
      }
    }
  },
  "definitions": {
    "Step": {
      "type": "object",
      "required": ["id", "title", "description", "kind", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "minLength": 1,
          "maxLength": 100
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "kind": {
          "type": "string",
          "enum": ["create_file", "edit_file", "delete_file", "run_command", "test", "review", "documentation", "custom"]
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "completed", "failed", "skipped", "blocked"],
          "default": "pending"
        },
        "dependsOn": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "estimatedDuration": {
          "type": "object",
          "required": ["value", "unit"],
          "properties": {
            "value": {
              "type": "number",
              "minimum": 0
            },
            "unit": {
              "type": "string",
              "enum": ["minutes", "hours", "days"]
            }
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Action"
          },
          "default": []
        },
        "validation": {
          "type": "object",
          "properties": {
            "criteria": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "automatedTests": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "Action": {
      "type": "object",
      "required": ["type", "description"],
      "properties": {
        "type": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "payload": {
          "type": "object"
        }
      }
    }
  }
}
