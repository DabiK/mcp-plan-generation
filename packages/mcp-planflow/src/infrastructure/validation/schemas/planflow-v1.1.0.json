{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://planflow.dev/schema/v1.1.0",
  "title": "PlanFlow Implementation Plan",
  "description": "Schema for structured implementation plans with dependencies and typed actions",
  "type": "object",
  "required": ["schemaVersion", "planType", "metadata", "plan", "steps"],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "1.1.0",
      "description": "Version of the PlanFlow schema"
    },
    "planType": {
      "type": "string",
      "enum": ["feature", "refactor", "migration", "bugfix", "optimization", "documentation"],
      "description": "Type of implementation plan"
    },
    "metadata": {
      "type": "object",
      "required": ["title", "description"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "author": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "plan": {
      "type": "object",
      "required": ["objective", "scope"],
      "properties": {
        "objective": {
          "type": "string",
          "minLength": 1,
          "description": "Main objective of the plan"
        },
        "scope": {
          "type": "string",
          "minLength": 1,
          "description": "Scope of the implementation"
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Technical or business constraints"
        },
        "assumptions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Assumptions made in the plan"
        },
        "successCriteria": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Criteria to consider the plan successful"
        },
        "diagrams": {
          "type": "array",
          "description": "Optional Mermaid diagrams for architecture visualization",
          "items": {
            "type": "object",
            "required": ["title", "type", "content"],
            "properties": {
              "title": {
                "type": "string",
                "minLength": 1,
                "description": "Diagram title"
              },
              "type": {
                "type": "string",
                "enum": ["flowchart", "sequence", "class", "er", "gantt", "state"],
                "description": "Mermaid diagram type"
              },
              "content": {
                "type": "string",
                "minLength": 1,
                "description": "Mermaid diagram syntax (e.g., 'flowchart TD\\n  A --> B')"
              },
              "description": {
                "type": "string",
                "description": "Optional description of what the diagram represents"
              }
            }
          }
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/Step"
      }
    }
  },
  "definitions": {
    "Step": {
      "type": "object",
      "required": ["id", "title", "description", "kind", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "minLength": 1,
          "maxLength": 100
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "kind": {
          "type": "string",
          "enum": ["create_file", "edit_file", "delete_file", "run_command", "test", "review", "documentation", "custom"]
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "completed", "failed", "skipped", "blocked"],
          "default": "pending"
        },
        "dependsOn": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "estimatedDuration": {
          "type": "object",
          "required": ["value", "unit"],
          "properties": {
            "value": {
              "type": "number",
              "minimum": 0
            },
            "unit": {
              "type": "string",
              "enum": ["minutes", "hours", "days"]
            }
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Action"
          },
          "default": []
        },
        "validation": {
          "type": ["object", "null"],
          "properties": {
            "criteria": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "automatedTests": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "diagram": {
          "type": "object",
          "description": "Optional Mermaid diagram for step-specific visualization",
          "required": ["type", "content"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["flowchart", "sequence", "class", "er", "gantt", "state"],
              "description": "Mermaid diagram type"
            },
            "content": {
              "type": "string",
              "minLength": 1,
              "description": "Mermaid diagram syntax (e.g., 'sequenceDiagram\\n  User->>API: Request')"
            },
            "description": {
              "type": "string",
              "description": "Optional description of what the diagram represents"
            }
          }
        }
      }
    },
    "Action": {
      "oneOf": [
        {
          "$ref": "#/definitions/CreateFileAction"
        },
        {
          "$ref": "#/definitions/EditFileAction"
        },
        {
          "$ref": "#/definitions/DeleteFileAction"
        },
        {
          "$ref": "#/definitions/RunCommandAction"
        },
        {
          "$ref": "#/definitions/TestAction"
        },
        {
          "$ref": "#/definitions/ReviewAction"
        },
        {
          "$ref": "#/definitions/DocumentationAction"
        },
        {
          "$ref": "#/definitions/CustomAction"
        }
      ]
    },
    "CreateFileAction": {
      "type": "object",
      "required": ["type", "filePath"],
      "properties": {
        "type": {
          "type": "string",
          "const": "create_file"
        },
        "filePath": {
          "type": "string",
          "minLength": 1,
          "description": "Path of the file to create"
        },
        "content": {
          "type": "string",
          "description": "Initial content of the file"
        },
        "description": {
          "type": "string",
          "description": "Description of what this action does"
        }
      }
    },
    "EditFileAction": {
      "type": "object",
      "required": ["type", "filePath"],
      "properties": {
        "type": {
          "type": "string",
          "const": "edit_file"
        },
        "filePath": {
          "type": "string",
          "minLength": 1,
          "description": "Path of the file to edit"
        },
        "before": {
          "type": "string",
          "description": "Code snippet before the change"
        },
        "after": {
          "type": "string",
          "description": "Code snippet after the change"
        },
        "description": {
          "type": "string",
          "description": "Description of the changes"
        },
        "lineNumbers": {
          "type": "object",
          "properties": {
            "start": {
              "type": "integer",
              "minimum": 1
            },
            "end": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      }
    },
    "DeleteFileAction": {
      "type": "object",
      "required": ["type", "filePath"],
      "properties": {
        "type": {
          "type": "string",
          "const": "delete_file"
        },
        "filePath": {
          "type": "string",
          "minLength": 1,
          "description": "Path of the file to delete"
        },
        "reason": {
          "type": "string",
          "description": "Reason for deleting the file"
        },
        "description": {
          "type": "string",
          "description": "Description of what this action does"
        }
      }
    },
    "RunCommandAction": {
      "type": "object",
      "required": ["type", "command"],
      "properties": {
        "type": {
          "type": "string",
          "const": "run_command"
        },
        "command": {
          "type": "string",
          "minLength": 1,
          "description": "Shell command to execute"
        },
        "workingDirectory": {
          "type": "string",
          "description": "Directory where to run the command"
        },
        "expectedOutput": {
          "type": "string",
          "description": "Expected output of the command"
        },
        "description": {
          "type": "string",
          "description": "Description of what this command does"
        }
      }
    },
    "TestAction": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "const": "test"
        },
        "testCommand": {
          "type": "string",
          "description": "Command to run tests"
        },
        "testFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of test files to run"
        },
        "coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Expected code coverage percentage"
        },
        "description": {
          "type": "string",
          "description": "Description of what this action tests"
        }
      }
    },
    "ReviewAction": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "const": "review"
        },
        "checklistItems": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of items to review"
        },
        "reviewers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of suggested reviewers"
        },
        "description": {
          "type": "string",
          "description": "Description of what to review"
        }
      }
    },
    "DocumentationAction": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "const": "documentation"
        },
        "sections": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Sections to document"
        },
        "format": {
          "type": "string",
          "enum": ["markdown", "jsdoc", "openapi", "readme"],
          "description": "Documentation format"
        },
        "filePath": {
          "type": "string",
          "description": "Path to documentation file"
        },
        "description": {
          "type": "string",
          "description": "Description of documentation to write"
        }
      }
    },
    "CustomAction": {
      "type": "object",
      "required": ["type", "description"],
      "properties": {
        "type": {
          "type": "string",
          "const": "custom"
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "payload": {
          "type": "object",
          "description": "Custom payload for the action"
        }
      }
    }
  }
}
